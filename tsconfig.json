{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "removeComments": true,//编译去除注释
    "noEmit": true,
    "baseUrl": "./",
    "paths":{
      "@/*":["components/*"],
    },
  },
  "declaration":true,
  "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue","*.d.ts","packages/*/*/*.ts"],
  "exclude": ["node_moduls/**"],
  "references": [{ "path": "./tsconfig.node.json" }]
}