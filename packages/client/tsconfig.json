{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "removeComments": true, //编译去除注释
    "noEmit": true,
    "baseUrl": "./",
    "types": ["notel-ui/dist/global"] //全局导入 notel-ui volar ts 类型支持
  },
  "declaration": true,
  "include": ["*.ts", "../../notel-env.d.ts", "*.vue"],
  "exclude": ["node_moduls/**"]
}
