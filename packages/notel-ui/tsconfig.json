{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "removeComments": true, //编译去除注释
    "noEmit": true,
    "baseUrl": "./"
  },
  "declaration": true,
  "include": [
    "./*.ts",
    "./*.d.ts",
    "./components/*.ts",
    "./components/**/*.vue",
    "./components/**/*.tsx"
  ],
  "exclude": ["node_moduls/**"]
}
